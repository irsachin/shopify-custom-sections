  }

  /* custom-faq table css */
  /* Add this CSS for the custom-faq-table */
  .custom-faq-table {
    width: 100%;
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .custom-faq-table div {
    padding: 15px;
    background-color: #014380;
    color: white;
    border-bottom: 1px solid #ddd;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .custom-faq-table div:last-child {
    border-bottom: none;
  }

  .custom-faq-table div:nth-child(even) {
    background-color: #f9f9f9;
    color: black;
  }

  .custom-faq-table div:nth-child(even):hover {
    background-color: white;
  }

  .custom-faq-table div span {
    color: #777;
  }

  /* Optional: Add hover effect */
  .custom-faq-table div:hover {
    background-color: black;
    transition: background-color 0.3s ease;
  }

  /* Arrow style */
  .faq_summary .arrow {
    padding: 6px;
    font-size: 16px;
    background: #02b162;
    border-radius: 11px;
    margin-right: 1rem;
}
  }

  .faq_summary.open .arrow {
    transform: rotate(180deg);
  }

   .faq_summary.open {
    background-color: #f9f9f9;
  }
  .Question_q{
    position: relative;
     margin-left:5px;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    flex-shrink: 0;
    height: 40px;
    font-family: Roboto, Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 1;
    overflow: hidden;
    user-select: none;
    background-color: #02b162;
    color: rgb(255, 255, 255);
    border-radius: 0.2rem;
    font-weight: 700;
    border: 1px solid #02b162;
    width: 3.5rem;
}

  .answer_box{
    display:flex;
  }

  .faq_answer {
    /* margin-left: 1rem; */
     width: 100%;
    /* margin-left: 1rem; */
