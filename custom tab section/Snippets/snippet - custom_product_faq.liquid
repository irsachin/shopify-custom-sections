</style>

{% if product.metafields.custom.custom-faq.value != blank %}
<div class="faq-main-box" id="faq-main-box"><div><h1 class="custom-faq-title" id="custom-faq-title">{{ section.settings.custom-faq_main_title }}</h1></div> 
<div class="faq-section">
 
  {% assign custom-faqTextArray = product.metafields.custom.custom-faq.value  %}
  {% for item in custom-faqTextArray %}
    {% assign keyValue = item | split: '==' %}
    <details class="faq_details" id="faq_details">
      <summary class="faq_summary">
        <div class=" Question_q">Q </div>
        <div class="faq_question"><span>{{ keyValue.first }}</span></div>
        <span class="show_faq arrow"> &#9660; </span>
      </summary>
      <div class="answer_box">
      <div class="Answer_A">A</div>
      <span class="faq_answer">{{ keyValue.last }}</span></div>
    </details>
    <br class="faq_break">
  {% endfor %}
</div>
</div>
{% endif %}


<script>
  document.addEventListener('DOMContentLoaded', function () {
    var faqSummaries = document.querySelectorAll('.faq_summary');

    faqSummaries.forEach(function (summary) {
      summary.addEventListener('click', function () {
        var faqContainer = this.closest('.faq_details');
        var isOpen = faqContainer.open;

        closeOtherFAQs(faqContainer);
        toggleArrow(this, !isOpen);
      });
    });

    function toggleArrow(summary, isOpen) {
      var arrow = summary.querySelector('.arrow');
      if (arrow) {
        arrow.innerHTML = isOpen ? '&#9660;' : '&#9650;';
      }
    }

    function closeOtherFAQs(currentFAQ) {
      var allFAQs = document.querySelectorAll('.faq_details');
      allFAQs.forEach(function (faq) {
        if (faq !== currentFAQ && faq.open) {
          faq.open = false;
          var summary = faq.querySelector('.faq_summary');
          toggleArrow(summary, false);
        }
      });
    }
  });
</script>






