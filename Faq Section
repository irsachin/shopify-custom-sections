<div class="faq-main-box"><div><h1 class="custom-faq-title" id="custom-faq-title">{{ section.settings.custom-faq_main_title }}</h1></div> 
<div class="faq-section">
 
  {% assign custom-faqTextArray = product.metafields.custom.custom-faq.value  %}
  {% for item in custom-faqTextArray %}
    {% assign keyValue = item | split: '=' %}
    <details class="faq_details">
      <summary class="faq_summary">
        <h4 class="faq_question">{{ keyValue.first }}</h4>
        <span class="show_faq arrow"> &#9660; </span>
      </summary>
      <p class="faq_answer">{{ keyValue.last }}</p>
    </details>
    <hr class="faq_break">
  {% endfor %}
</div>
</div>
{% endif %}


<script>
  document.addEventListener('DOMContentLoaded', function () {
    var faqSummaries = document.querySelectorAll('.faq_summary');

    faqSummaries.forEach(function (summary) {
      summary.addEventListener('click', function () {
        var faqContainer = this.parentNode;
        faqContainer.classList.toggle('open');

        if (faqContainer.classList.contains('open')) {
          closeOtherFAQs(faqContainer);
        }

        toggleArrow(this, faqContainer.classList.contains('open'));
      });
    });

    function toggleArrow(summary, isOpen) {
      var arrow = summary.querySelector('.arrow');
      if (arrow) {
        arrow.innerHTML = isOpen ? '&#9650;' : '&#9660;';
      }
    }

    function closeOtherFAQs(currentFAQ) {
      var allFAQs = document.querySelectorAll('.faq_summary');
      allFAQs.forEach(function (faq) {
        if (faq.parentNode !== currentFAQ) {
          faq.parentNode.classList.remove('open');
          toggleArrow(faq, false);
        }
      });
    }
  });
</script>




