  {
    "name": "Home Page Sticky Label",
    "settings": [
      {
        "type":"text",
        "id":"Label_text",
        "label":"Label Text",
        "default":"Best Deal"
      },
       {
        "type":"color",
        "id":"label_text_color",
        "label":"Label Text Color",
